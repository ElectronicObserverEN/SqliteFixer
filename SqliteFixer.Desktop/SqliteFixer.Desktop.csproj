	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\SqliteFixer\SqliteFixer.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Properties\PublishProfiles\" />
	</ItemGroup>
</Project>